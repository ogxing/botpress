.msgInput {
  width: 100%;
  height: 50px;
  outline: none;
  border: none;
  resize: vertical;
  padding: 5px;
  border-top: 2px solid var(--c-neutral);

  &:focus {
    border-top: 2px solid var(--c-brand);
    background-color: var(--c-background-light-2);
  }

  &.disabled {
    opacity: 0.5;
  }

  &.error {
    border: 1px solid var(--c-text--error);
  }
}

.container {
  display: flex;
  flex-direction: column;
  height: calc(100% - 24px);
}

.panes {
  position: relative;
  height: 100%;
}

.history {
  width: 100%;
  height: 100%;
  overflow-y: scroll;
  overflow-x: hidden;
}

.inspector {
  overflow-x: hidden;
  background-color: var(--c-background-dark-2);
  height: 100%;
  width: 100%;

  & > ul {
    margin: none;
    padding-left: 5px;
  }
}

.toolbar {
  background-color: var(--c-background--dark-1);
  border-top: 1px solid var(--c-background--dark-2);

  :global(.btn-default) {
    color: var(--c-neutral--light-1);
    background-color: var(--c-background--dark-1);
    border-color: var(--c-background--dark-2);
    padding: 3px 5px;
    border-radius: 0;
    border-top: none;
    border-bottom: none;

    &:hover {
      color: var(--c-text--light);
      background-color: var(--c-background--dark-2);
    }
  }

  :global(.glyphicon) {
    color: var(--c-text--light);
    font-size: 100%;
    margin-right: 3px;
  }

  .pullRight {
    float: right;
  }
}

:global(.Resizer.vertical) {
  background: black;
  width: 8px;
  cursor: col-resize;
  border: 3px solid rgba(255, 255, 255, 0) !important;
  opacity: 0.1;

  &:hover {
    opacity: 0.2;
  }
}

:global(.Resizer.horizontal) {
  background: black;
  height: 8px;
  cursor: row-resize;
  border: 3px solid rgba(255, 255, 255, 0) !important;
  opacity: 0.1;
  margin-top: -7px;
  padding-top: 5px;

  &:hover {
    opacity: 0.2;
  }
}
